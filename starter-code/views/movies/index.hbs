<h2>Movies:</h2>

<a href="/movies/add">Add a new movie</a>

{{#each movies}}
<div class="movie-card">
  <h3><a href="/movies/{{this._id}}">{{this.title}}</a></h3>
  <a class="link-edit" href="/movies/{{this._id}}/edit">Edit</a>
  <form action="/movies/{{this._id}}/delete" method="POST">
    <button class="btn-delete" type="submit">Delete</button>
  </form>
</div>
{{/each}}

<a href="/">Back to homepage</a>